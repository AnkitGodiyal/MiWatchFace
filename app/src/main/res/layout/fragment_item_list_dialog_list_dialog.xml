<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottomsheet"
    android:padding="16dp"
    tools:context="com.ankit.miwatchface.fragments.Home">

   <ImageView
       android:id="@+id/ivSample"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:src="@drawable/sample"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Installation Instructions:\n-> Open Mi fit App\n-> Click on Profile\n-> Click on Mi Smart Band 5\n-> Click onStore\n-> Click on Manager\n-> Select the watch face you downloaded\n-> Click on Sync watch face"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivSample"
        android:textColor="#ffffff"
/>

</androidx.constraintlayout.widget.ConstraintLayout>